<Window x:Class="Notepad.MyAboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notepad"
        mc:Ignorable="d"
        Title="MyAboutWindow" Height="450" Width="800">
    <Grid>
        <!-- Descriptive About Panel-->
        <StackPanel Background="#FF1A1534"> <!-- Background color -->
            <TextBlock Text="Lukas Notepad Version 1.0" FontWeight="Bold" FontSize="16" Margin="5" Foreground="#FFD4CFCF"/> <!-- Title -->
            <!-- Description -->
            <TextBlock Text="This is a simple Notepad application developed in C# and WPF." FontSize="14" Margin="5" Foreground="#FFD4CFCF"/> 
            <TextBlock Text="It was created as a project for the C# Programming course at the Conestoga College." FontSize="14" Margin="5" Foreground="#FFD4CFCF"/> 
            <TextBlock Text="Developed by Lukas Fukuoka Vieira" FontSize="14" Margin="5" Foreground="#FFD4CFCF"/>
            <TextBlock Text="First Version: 9/25/2024" FontSize="14" Margin="5" Foreground="#FFD4CFCF"/> 
            <Button Content="Close" Click="Close_Click" HorizontalAlignment="Center" Width="75" Margin="220" /> <!-- Close button -->
        </StackPanel>
    </Grid>
</Window>
